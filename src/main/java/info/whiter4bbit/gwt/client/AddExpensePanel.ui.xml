<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:e='urn:import:info.whiter4bbit.gwt.client'>

    <g:VerticalPanel>
        <g:Label text="Expense description"/>
        <g:TextBox text="" ui:field="description"/>
        <g:Label text="Expense amount ($):"/>
        <e:AmountTextBox text="" ui:field="amount"/>
        <g:HorizontalPanel>
            <g:Button text="Add" ui:field="addButton"/>
            <g:Button text="Cancel" ui:field="cancelButton"/>
        </g:HorizontalPanel>
    </g:VerticalPanel>

</ui:UiBinder>